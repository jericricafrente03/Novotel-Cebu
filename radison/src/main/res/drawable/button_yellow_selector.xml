<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" >
        <shape>
            <solid
                android:color="#F8DD1A" />
            <stroke
                android:width="1dp"
                android:color="#F8DD1A" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />


        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#F8DD1A"
                android:endColor="#bb6008"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#bb6008" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />

        </shape>

    </item>
</selector>