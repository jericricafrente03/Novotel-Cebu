<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--main-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.16" />

    <!--main-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <!--main-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />


    <!--middle-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".50" />

    <!--half 1-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_half_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <!--half 2-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_half_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.83" />


    <!--airmedia-->
    <RelativeLayout
        android:id="@+id/rl_airmedia"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="7dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusRight="@id/rl_website"
        android:clickable="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gl_1_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--airmedia-->
        <ImageView
            android:id="@+id/iv_airmedia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icons_airmedia" />


        <!--txt airmedia-->
        <TextView
            android:id="@+id/tv_airmedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:text="AIRMEDIA"
            android:textAlignment="center"
            android:textColor="@color/carlson_white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!--txt airmedia TM-->
        <TextView
            android:id="@+id/tv_tm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/tv_airmedia"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@id/tv_airmedia"
            android:layout_marginBottom="30dp"
            android:text="                                                     TM"
            android:textAlignment="center"
            android:textColor="@color/carlson_white"
            android:textSize="5sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <!--weather-->
    <RelativeLayout
        android:id="@+id/rl_weather"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusRight="@id/rl_enews"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gl_2_1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/gl_1_1"
        app:layout_constraintTop_toTopOf="@+id/gl_middle">
        <!--weather-->
        <ImageView
            android:id="@+id/iv_weather"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icons_weather" />

        <!--txt weather-->
        <TextView
            android:id="@+id/tv_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:text="WEATHER"
            android:textAlignment="center"
            android:textColor="@color/carlson_white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:focusable="true"
            android:background="@drawable/view_selector"/>

    </RelativeLayout>

    <!--website-->
    <RelativeLayout
        android:id="@+id/rl_website"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:nextFocusRight="@id/rl_weather"
        android:layout_marginTop="7dp"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toTopOf="@+id/gl_middle"
        app:layout_constraintEnd_toStartOf="@+id/gl_half_1"
        app:layout_constraintStart_toStartOf="@+id/gl_1_1"
        app:layout_constraintTop_toTopOf="parent">

        <!--website-->
        <ImageView
            android:id="@+id/iv_website"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icons_website" />


        <!--txt newspaper -->
        <TextView
            android:id="@+id/tv_newspaper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="WEBSITE"
            android:textAlignment="center"
            android:textColor="@color/carlson_white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:focusable="true"
            android:background="@drawable/view_selector"/>

    </RelativeLayout>

    <!--enews-->
    <RelativeLayout
        android:id="@+id/rl_enews"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusRight="@id/iv_netflix"
        android:layout_marginTop="7dp"
        app:layout_constraintBottom_toTopOf="@+id/gl_middle"
        app:layout_constraintEnd_toStartOf="@+id/gl_2_1"
        app:layout_constraintStart_toStartOf="@+id/gl_half_1"
        app:layout_constraintTop_toTopOf="parent">

        <!--newpaper-->
        <ImageView
            android:id="@+id/iv_enews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icons_enewspaper" />

        <!--txt website-->
        <TextView
            android:id="@+id/tv_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="E-NEWPAPER"
            android:textAlignment="center"
            android:textColor="@color/carlson_white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"/>

        <ProgressBar
            android:id="@+id/pb_news"
            style="@android:style/Widget.Material.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/circular_progress_bar"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_enews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:gravity="left"
            android:text="Installing"
            android:textColor="@color/carlson_white"
            android:visibility="gone" />


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:focusable="true"
            android:background="@drawable/view_selector"/>

    </RelativeLayout>

    <!--netflix-->
    <RelativeLayout
        android:id="@+id/iv_netflix"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusRight="@id/iv_facebook"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gl_3"
        app:layout_constraintStart_toStartOf="@+id/gl_2_1"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icons_netflix" />

        <ProgressBar
            android:id="@+id/pb_netflix"
            style="@android:style/Widget.Material.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/circular_progress_bar"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_netflix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:gravity="left"
            android:text="Installing"
            android:textColor="@color/carlson_white"
            android:visibility="gone" />


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:focusable="true"
            android:background="@drawable/view_selector"/>
    </RelativeLayout>


    <!--spotify-->
    <RelativeLayout
        android:id="@+id/iv_spotify"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="4dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusRight="@id/iv_twitter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/gl_3"
        app:layout_constraintTop_toTopOf="@+id/gl_middle">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icons_spotify" />

        <ProgressBar
            android:id="@+id/pb_spotify"
            style="@android:style/Widget.Material.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/circular_progress_bar"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_spotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:gravity="left"
            android:text="Installing"
            android:textColor="@color/carlson_white"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:focusable="true"
            android:background="@drawable/view_selector"/>
    </RelativeLayout>


    <!--facebook-->
    <RelativeLayout
        android:id="@+id/iv_facebook"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="7dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusRight="@id/iv_spotify"
        app:layout_constraintBottom_toTopOf="@+id/gl_middle"
        app:layout_constraintEnd_toStartOf="@+id/gl_half_2"
        app:layout_constraintStart_toStartOf="@+id/gl_3"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icons_fb" />

        <ProgressBar
            android:id="@+id/pb_facebook"
            style="@android:style/Widget.Material.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/circular_progress_bar"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:gravity="left"
            android:text="Installing"
            android:textColor="@color/carlson_white"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:focusable="true"
            android:background="@drawable/view_selector"/>
    </RelativeLayout>

    <!--twitter-->
    <RelativeLayout
        android:id="@+id/iv_twitter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="7dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusRight="@id/rl_airmedia"
        app:layout_constraintBottom_toTopOf="@+id/gl_middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/gl_half_2"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icons_twit" />

        <ProgressBar
            android:id="@+id/pb_twitter"
            style="@android:style/Widget.Material.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/circular_progress_bar"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_twitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:gravity="left"
            android:text="Installing"
            android:textColor="@color/carlson_white"
            android:visibility="gone" />


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:focusable="true"
            android:background="@drawable/view_selector"/>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>